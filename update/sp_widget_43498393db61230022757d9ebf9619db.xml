        <client_script><![CDATA[function AbeControlCtrl($scope, ngAbeControl, $timeout) {

    let c = this;

    c.portal = ngAbeControl.getPortal;

    c.forceRefresh = false;

    $scope.$on('abe.portal.refresh', function () {
        c.forceRefresh = true;
        $timeout(function () {
            c.forceRefresh = false;
        }, 0);
    });

    c.changePortal = function (sysId) {

        let portal = ngAbeControl.getPortals().find(function (cv) {
            return cv.sysId === sysId;
        });

        ngAbeControl.setPortal(portal);
    };
}]]></client_script>
